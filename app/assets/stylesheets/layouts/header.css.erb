/* PHASE 1: Header */



body {
 font-family: "Roboto", sans-serif;
 font-size: 16px;
 font-weight: 400;
 background: #eee;
}

.main-header {
 color: #fff;
 /* border-bottom: 1px solid #ccc; */
 height: 64px;
 display: flex;
 align-items: center;
}

.header {
 background: #d32323;
 color: #fff;
 /* border-bottom: 1px solid #ccc; */
 height: 64px;
 display: flex;
 align-items: center;
}


.main-logo a {
 display: block;
 /* padding: 10px 20px; */
}

.header-nav {
 display: flex;
 justify-content: space-between;
 margin: 0 auto;
 width: 960px;
}

.main-bar {
 display: flex;
 justify-content: center;
 margin: 0 auto;
 height: 500px;
 width: 100%;
}

.main-bar-inner{
  padding-top: 130px;
  display: flex;
  flex-direction: column;
}

.main-logo {
 font-family: "Roboto", sans-serif;
 font-size: 50px;
 font-weight: 700;
 display: flex;
 justify-content: center;
 padding-bottom: 40px;
}


.logo-img{
  width: 270px;
  height: 90px;
  background: url('<%= asset_path("gandalp_logo.png") %>') no-repeat center;
  background-size: cover;
}

.main-logo:hover {
}

.header-list {
 display: flex;
}

.header-list a{
  display: block;
  padding: 10px 20px;
}

.header-list > li {
 /* border-left: 1px solid #ccc; */
}

.header-list > li:hover {
 border-bottom:1px solid #fff;
}

.bg-img{
 /* background: #d32323 url('/assets/smoothie.jpeg') no-repeat center; */
 background: url('<%= asset_path("smoothie.jpeg") %>');
 background-size: cover;
}
.search{
  background-color: #ffffff;
  /* border-radius: 20px; */
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5px 0px 0px 5px;
}
.biz-search{
  background-color: #ffffff;
  width: 480px;
  height: 45px;
  display: flex;
  align-items: center;
}

.loc-search{
  background-color: #ffffff;
  width: 416px;
  height: 45px;
  display: flex;
  align-items: center;
}

.biz-search .input-label, .loc-search .input-label{
 color: #666;
 margin-right: 12px;
 padding-left: 15px;
 user-select: none;
 cursor: default;
}

.biz-search .input-text{
  width: 100%;
  height: 70%;
  display: flex;
  border-right: 1px solid #ccc;
}

.loc-search .input-text{
  width: 100%;
  height: 70%;
  display: flex;
}

.biz-search input, .loc-search input{
  width: 100%;
}
.search-wrap{
  display: flex;
  border-radius: 5px;
  width: 960px;
  height: 48px;
  background-color: #ffffff;
  align-items: center;
  justify-content: center;
}

.search-wrap > form {
  display: flex;
  height: 100%;
}
.search-icon{
  background-color: #be2020;
  width: 64px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 5px 5px 0;
}
