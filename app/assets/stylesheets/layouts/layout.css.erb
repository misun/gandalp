.content {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin: 0 auto;
  background: #fff;
  border-bottom: 1px solid #ccc;
  border-top: 0;
}

.content-topbar {
  min-height: 200px;
  padding: 20px;
  padding-right: 19px;
}

.content-bottombar {
  margin-top: 50px;
  min-height: 200px;
  padding: 20px;
  display: flex;
  align-items: flex-start;
}

.content-leftbar {
  max-width: 630px;
  min-height: 200px;
  padding: 20px;
  padding-right: 19px;
}

.content-rightbar {
  width: 320px;
  min-height: 200px;
  padding: 20px;
  display: flex;
  align-items: flex-start;
}

.content-bottombar>.session-img {
  width: 382px;
  height: 342px;
  border-radius: 50%;
  background-image: url('<%= asset_path("session.jpeg") %>');
  background-size: 400px;
}
